{
  "name": "ralph-lsp",
  "description": "Language server for Ralph - The smart contract programming language for the Alephium blockchain",
  "author": "Alephium",
  "license": "LGPL-3.0",
  "version": "0.0.1",
  "publisher": "Alephium",
  "repository": {
    "type": "git",
    "url": "https://github.com/alephium/ralph-lsp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:ralph",
    "workspaceContains:**/*.ral",
    "workspaceContains:ralph.json"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Ralph LSP settings",
      "properties": {
        "ralphLSP.server.jar": {
          "type": "string",
          "default": "<path-to>/ralph-lsp.jar",
          "description": "Ralph LSP server jar location. Don't forget to reload after editing. Open the command palette (Ctrl + Shift + P) and execute the command: Reload Window"
        },
        "ralphLsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and Ralph language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "build": "./node_modules/.bin/vsce package",
    "watch": "tsc -b -w"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0",
    "vsce": "^2.15.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.1",
    "@types/node": "^16.18.34",
    "@vscode/test-electron": "^2.2.3",
    "typescript": "^5.2.2"
  }
}
